{
  "name": "electron-ts-ng-quick-start",
  "version": "0.0.0",
  "main": "dist/main/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --ts-config=tsconfig.renderer.json && tsc --project tsconfig.main.json",
    "watch": "ng build --ts-config=tsconfig.renderer.json --watch --configuration development",
    "test": "ng test",
    "electron": "electron .",
    "electron-build": "npm run build && electron .",
    "pkg": "electron-packager ./ electronAppStart --platform=win32 --overwrite"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "electron": "^37.2.4",
    "electron-packager": "^17.1.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.3",
    "@angular/cli": "^20.1.3",
    "@angular/compiler-cli": "^20.1.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.2"
  }
}
