{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["node"],
    "rootDir": "./src-main",
    "lib": ["es2015","dom"],
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src-main/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "src-renderer"]
}